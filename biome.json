{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": false,
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": false
  },
  "files": {
    "includes": ["**", "!node_modules/**", "!dist/**", "!coverage/**", "!**/*.min.js"]
  }
}
